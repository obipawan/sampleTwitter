<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="16dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_detail_thumb"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/detail_thumb_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/tweet_item_margin"/>

    <TextView
        android:id="@+id/detail_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/user_detail_thumb"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/detail_user_screen_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/user_detail_thumb"
        android:layout_toRightOf="@id/detail_user_name"/>
    <TextView
        android:id="@+id/detail_retweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_user_name"/>

    <TextView
        android:id="@+id/detail_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/detail_user_name"
        android:layout_toRightOf="@id/detail_retweets"/>
    <TextView
        android:id="@+id/tweet_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:textIsSelectable="true"
        android:layout_below="@id/detail_favorites"
        android:text="blah blah"
        tools:context="com.greycellofp.sampletwitter.fragments.TweetDetailFragment" />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tweet_detail"/>

</RelativeLayout>